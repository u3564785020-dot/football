(function(){"use strict";function isMobile(){return window.innerWidth<=768}function removeGradients(){if(!isMobile())return;const quantityElements=document.querySelectorAll("line-item-quantity, cart-drawer line-item-quantity, .cart-drawer line-item-quantity, line-item-quantity.h-stack, line-item-quantity.h-stack.justify-center.gap-3");let removed=0;quantityElements.forEach(el=>{el.setAttribute("style","background: transparent !important; background-image: none !important; background-color: transparent !important;"),removed++}),document.querySelectorAll(".h-stack.gap-4.justify-between, .text-sm.text-subdued.sm\\:hidden, .text-sm.text-subdued").forEach(el=>{const bg=window.getComputedStyle(el).backgroundImage||"";(bg.includes("667eea")||bg.includes("764ba2")||bg.includes("linear-gradient"))&&(el.setAttribute("style","background: transparent !important; background-image: none !important; background-color: transparent !important;"),removed++)}),console.log("[Gradient Killer] Removed gradients from",removed,"elements")}function init(){removeGradients(),new MutationObserver(mutations=>{for(const mutation of mutations)if(mutation.type==="childList"||mutation.type==="attributes"){const cartDrawer=document.querySelector("cart-drawer");cartDrawer&&cartDrawer.hasAttribute("open")&&(setTimeout(removeGradients,100),setTimeout(removeGradients,500))}}).observe(document.body,{childList:!0,subtree:!0,attributes:!0,attributeFilter:["open","class"]}),document.documentElement.addEventListener("cart:refresh",()=>{setTimeout(removeGradients,100)}),window.addEventListener("resize",()=>{isMobile()&&removeGradients()}),console.log("[Gradient Killer] Initialized for mobile cart drawer")}document.readyState==="loading"?document.addEventListener("DOMContentLoaded",init):init()})();
